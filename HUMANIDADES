    <script>
        function sendWhatsApp() {
            const name = document.getElementById('name').value;
            const email = document.getElementById('email').value;
            const phone = document.getElementById('phone').value;

            if (name === '' || email === '' || phone === '') {
                alert('Por favor, completa todos los campos del formulario.');
                return;
            }

            const seminarNumber = "51983050978";
            let message = `¡Hola! Deseo inscribirme en el Seminario de Humanidades.\n\n`;
            message += `*Nombre:* ${name}\n`;
            message += `*Correo:* ${email}\n`;
            message += `*Celular:* ${phone}\n\n`;
            message += `Agradeceré la información para realizar el pago. ¡Gracias!`;

            const whatsappUrl = `https://api.whatsapp.com/send?phone=${seminarNumber}&text=${encodeURIComponent(message)}`;

            window.open(whatsappUrl, '_blank');
        }
    </script>

